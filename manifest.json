{
  "manifest_version": 3,
  "name": "goto-translate",
  "version": "1.0.1",
  "action": { "default_popup": "index.html" },
  "permissions": ["tabs", "activeTab", "storage", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.tsx"]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
